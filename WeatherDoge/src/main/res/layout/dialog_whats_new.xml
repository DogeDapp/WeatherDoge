<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/santa_doge"
            android:layout_marginTop="-38dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_whats_new_text_1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_whats_new_text_2"
                android:textColor="@android:color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_whats_new_text_3"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_height="175dp"
                android:src="@drawable/widget_preview"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_whats_new_text_4"
                android:textColor="@android:color/black"
                android:layout_marginTop="-2dp" />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/widget_background_bug"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="205dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_whats_new_text_5"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_whats_new_text_6"
                android:textColor="@android:color/black"
                android:textStyle="italic"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_whats_new_versobit"
                android:src="@drawable/versobit"
                android:scaleType="fitStart"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8a8a8a"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/dialog_whats_new_text_7" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
