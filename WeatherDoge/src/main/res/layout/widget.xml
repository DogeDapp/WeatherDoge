<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:id="@+id/widget_root">

    <ImageView
        android:layout_above="@+id/widget_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/widget_sky"
        android:src="@drawable/sky_50n"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/widget_dogeimg"
        android:layout_alignParentRight="true"
        android:src="@drawable/doge_50"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/widget_bottom_bar"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:text="@string/very_negative"
                style="@style/AppTheme.TextViewDropShadow"
                android:id="@+id/widget_negative" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:text="4"
                style="@style/AppTheme.TextViewDropShadow"
                android:id="@+id/widget_temp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:text="@string/many_degree"
                style="@style/AppTheme.TextViewDropShadow"
                android:id="@+id/widget_degrees" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_tempimg"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mist"
            style="@style/AppTheme.TextViewDropShadow"
            android:id="@+id/textView5" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_descimg" />

    </LinearLayout>

    <RelativeLayout
        android:id="@id/widget_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/widget_round_rect_shape"
        android:layout_alignParentBottom="true">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calgary"
            android:id="@+id/widget_location"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_locationimg" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last updated an hour ago"
            android:id="@+id/widget_last_updated"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_last_updated_img" />
    </RelativeLayout>
</RelativeLayout>
