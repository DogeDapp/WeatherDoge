<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:background="@drawable/dialog_contribute_background"
            android:id="@+id/dialog_contribute_github_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_contribute_github_logo"
                android:src="@drawable/github" />

            <TextView
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/dialog_contribute_github_logo"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dialog_contribute_github_title"
                android:id="@+id/dialog_contribute_github_title"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content" />

            <TextView
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/dialog_contribute_github_logo"
                android:layout_below="@id/dialog_contribute_github_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_contribute_github_msg" />
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:background="@drawable/dialog_contribute_background"
            android:id="@+id/dialog_contribute_dogecoin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/dialog_contribute_dogecoin_logo"
                    android:src="@drawable/dogecoin" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@id/dialog_contribute_dogecoin_logo"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/dialog_contribute_dogecoin_title"
                    android:id="@+id/dialog_contribute_dogecoin_title"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dialog_contribute_dogecoin_logo"
                    android:layout_below="@id/dialog_contribute_dogecoin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/dialog_contribute_dogecoin_msg" />
            </RelativeLayout>
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:background="@drawable/dialog_contribute_background"
            android:id="@+id/dialog_contribute_bitcoin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_contribute_bitcoin_logo"
                    android:src="@drawable/bitcoin" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@id/dialog_contribute_bitcoin_logo"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/dialog_contribute_bitcoin_title"
                    android:id="@+id/dialog_contribute_bitcoin_title"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dialog_contribute_bitcoin_logo"
                    android:layout_below="@id/dialog_contribute_bitcoin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/dialog_contribute_bitcoin_msg" />
            </RelativeLayout>
    </LinearLayout>
</ScrollView>
