<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorPrimary">@color/primary</item>
    </style>

    <style name="AppTheme.Options" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Dialog.Light">
        <item name="android:colorAccent">@color/primary</item>
    </style>

</resources>
